{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "route1",
        "ClusterId": "cluster1",
        "Match": {
          "Path": "/json/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/json"
          }
        ]
      },
      {
          "RouteId": "route2",
          "ClusterId": "cluster2",
          "Match": {
            "Path": "/pet/{**catch-all}"
          },
          "Transforms": [
            {
              "PathRemovePrefix": "/pet"
            }
          ]
        }
    ],
    "Clusters": {
      "cluster1": {
        "Destinations": {
          "cluster1/destination1": {
            "Address": "https://jsonplaceholder.typicode.com"
          }
        }
      },
      "cluster2": {
          "Destinations": {
            "cluster1/destination1": {
              "Address": "https://petstore.swagger.io/v2"
            }
          }
        }
    }
  }
}
